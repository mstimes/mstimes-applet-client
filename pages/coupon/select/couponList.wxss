#tabs{
  display: flex;
  justify-content: space-around;
}

.item{
  flex:10%;
  margin:0rpx 0rpx 0rpx 0rpx;
  padding: 12rpx 12rpx 30rpx 0rpx;
  color:rgb(196, 194, 194);
  background-color: black;
  text-align: center;
  font-size: 23rpx;
}

.active{
  color:white;
  border-bottom: 4rpx solid white;
}

.swiper{
  display: block;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  margin-top: 20rpx;
}
