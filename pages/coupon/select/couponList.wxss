.column-flex-container {
  width: 650rpx;
  background-color: white;
  border: 1px solid black;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
  /* padding: 5px 0px 5px 0px; */
  display: flex;
  flex-direction: column;
}

.row-flex-container {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 23rpx;
  font-weight: 400;
  /* height: 280rpx; */
}

.coupon-container {
  background-color: black;
  color: white;
  font-size: 100rpx;
  font-weight: 100;
  text-align: center;
  padding-top: 30rpx;
  /* padding-bottom: 30rpx; */
  width: 70%;
  height: 160rpx;
}

.row-flex-price-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
}

.coupon-info-container {
  background-color: white;
  border-bottom: 1px solid black;
  font-size: 20rpx;
  font-weight: 500;
  text-align: center;
  padding-top: 40rpx;
  width: 30%;
}

.weui-cell {
  margin-top: 100rpx;
  margin-left: 30rpx;
}

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border-color: rgb(31, 30, 30);
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border-color: rgb(31, 30, 30);
  background-color: rgb(31, 30, 30);
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color:#fff;
}

.confirm-container {
  font-size: 39rpx;
  position: fixed;
  background-color: rgb(255, 253, 253);
  bottom: 0px;
  display: flex;
  width: 100%;
  justify-content: center;
  padding: 0px 0px 20px 0px
}

.confirm-butt {
  font-size: 26rpx; 
  width: 100%;
  background-color: black;
  color: white;
  border: 1px solid black;
  border-radius: 0rpx;
  /* margin-left: 0rpx;
  margin-right: 20rpx; */
  padding-top: 20rpx;
}

.bottom-confirm-flex {
  display: flex;
  flex-direction: column;
  /* justify-content: flex-start; */
}