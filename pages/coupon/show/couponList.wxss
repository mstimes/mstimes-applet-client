.column-flex-container {
  background-color: white;
  border: 1px solid black;
  margin: 30rpx;
  /* padding: 5px 0px 5px 0px; */
  display: flex;
  flex-direction: column;
}

.row-flex-container {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 23rpx;
  font-weight: 400;
}

.coupon-container {
  background-color: black;
  color: white;
  font-size: 100rpx;
  font-weight: 100;
  text-align: center;
  padding-top: 30rpx;
  /* padding-bottom: 30rpx; */
  width: 70%;
  height: 160rpx;
}

.row-flex-price-container {
  display: flex;
  flex-direction: row;
  width: 100%;
}

.coupon-info-container {
  background-color: white;
  border-bottom: 1px solid black;
  font-size: 20rpx;
  font-weight: 500;
  text-align: center;
  padding-top: 40rpx;
  width: 30%;
}

