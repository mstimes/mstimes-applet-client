<view class="c-top-header-black">
  <image style="width: 35rpx; height: 35rpx; margin-top: 20rpx;" src="/images/pi_white1.png"></image>
    PAI 官方精品店
</view>

<view class="contain">
  <view style="text-align: center; font-size: 30rpx; font-weight: 500; margin-top: 30rpx; margin-bottom: 20rpx;">恭喜您已获得{{couponList.length}}张新会员购物券</view>
  <block wx:for="{{couponList}}" wx:key="index">
    <view class="row-flex-container">
      <view class="column-flex-container">
        <view class="row-flex-container">
          <view class="coupon-container">
            <view class="row-flex-price-container">
              <view wx:if="{{item.couponType != 5}}" style="font-size: 50rpx; margin-top: 50rpx; margin-left: 0rpx;">¥ </view>
              <view>{{item.discountCoupon}}</view>
              <view wx:if="{{item.couponType == 5}}" style="font-size: 50rpx; margin-top: 50rpx; margin-left: 10rpx;">折</view>
            </view>
          </view>
          <view class="coupon-info-container">
            <view>{{item.couponCategory}}</view>
            <view style="font-size: 35rpx; font-weight: 300; margin-top: 10rpx; margin-bottom: 10rpx;">{{item.couponCode}}</view>
            <view style="margin-top: 20rpx; color: rgb(136, 135, 135); font-size: 20rpx; font-weight: 400;">{{item.useRule}}</view>
          </view>
        </view>
        <view style="font-size: 20rpx; height: 40rpx; margin-left: 30rpx; margin-top: 10rpx; color:rgb(92, 91, 91)"> 有效期 {{item.validDate}}</view>
      </view>
    </view>
  </block>

  <view class="get_coupon">
    <button class="butt" size="small" style="width:70%" bindtap="toHomePage">去首页逛逛</button>
  </view>
</view>



