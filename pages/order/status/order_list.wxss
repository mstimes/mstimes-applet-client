@import "../../common/common.wxss";
@import "../../order/order.wxss";
@import "../../mycenter/my.wxss";

#tabs{
  display: flex;
  justify-content: space-around;
}

.item{
  flex:10%;
  margin:0rpx 0rpx 0rpx 0rpx;
  padding: 12rpx 30rpx 30rpx 30rpx;
  color:rgb(196, 194, 194);
  background-color: white;
  text-align: center;
  font-size: 23rpx;
}

.active{
  color:black;
  border-bottom: 2rpx solid black;
  /* text-decoration: underline solid black 2rpx;  */
}

.swiper{
  display: block;
  width: 100%;
  height: 100vh;
  overflow: hidden; 
}
/* .swiper view{ 
  text-align: center; 
  padding-top: 20rpx; 
}  */

.column-flex-container {
  background-color: white;
  border: 1px solid black;
  margin: 30rpx;
  /* padding: 5px 0px 5px 0px; */
  display: flex;
  flex-direction: column;
}

.row-flex-container {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 23rpx;
  font-weight: 400;
}

.coupon-container {
  background-color: black;
  color: white;
  font-size: 100rpx;
  font-weight: 100;
  text-align: center;
  padding-top: 30rpx;
  /* padding-bottom: 30rpx; */
  width: 70%;
  height: 160rpx;
}

.row-flex-price-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
}

.coupon-info-container {
  background-color: white;
  border-bottom: 1px solid black;
  font-size: 20rpx;
  font-weight: 500;
  text-align: center;
  padding-top: 40rpx;
  width: 30%;
}

.order-records-container {
  border-radius: 5px;
  background-color: white;
  padding: 10px 10px 10px 0px;
  margin: 10rpx 10rpx 10rpx 10rpx;
}

.payment-butt {
  background-color: white;
  border: 1px solid black;
  border-radius: 20rpx;
  padding-top: 5rpx;
  padding-bottom: 10rpx;
  text-align: center;
}

