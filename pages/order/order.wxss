.background {
  height: 1300rpx;
  background-color:#f1f1f5d7;
}

.add-address-container {
  border-radius: 5px;
  background-color: white;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 10px 10px 10px 0px;
}
.order-info-container {
  border-radius: 5px;
  background-color: white;
  margin-top: 15rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 10px 10px 10px 0px;
  height: 600rpx;
}
.row-space-between {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 23rpx;
  font-weight: 400;
  margin-left: 50rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
}
.row-flex-start {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 23rpx;
  font-weight: 400;
  margin-left: 50rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
}
.price-num-space-between {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 23rpx;
  font-weight: 400;
  margin-left: 5rpx;
  margin-right: 5rpx;
  margin-top: 20rpx;
}
.statistic-container {
  background-color:rgb(245, 245, 245);
  margin-top: 40rpx;
  margin-left: 20rpx;
  padding: 10px 0px 10px 0px;
  height: 100rpx;
}
.column-container {
  background-color:rgb(245, 245, 245);
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  margin-left: 40rpx;
  padding: 5px 0px 10px 0px;
  display: flex;
  flex-direction: column;
}
.num-container {
  border-radius: 20px;
  width: 15%;
  background-color: rgb(240, 236, 236);
  text-align:center;
}
.common-column-container {
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  margin-left: 40rpx;
  padding: 5px 0px 10px 0px;
  display: flex;
  flex-direction: column;
}
.statistic-row {
  background-color:rgb(245, 245, 245);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 23rpx;
  font-weight: 400;
}
.do-buy-container {
  font-size: 39rpx;
  position: fixed;
  bottom: 10px;
  display: flex;
  width: 100%;
  justify-content: center;
}
.do-buy-butt {
  font-size: 24rpx; 
  width: 100%;
  background-color: black;
}
