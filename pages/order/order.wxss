/* pages/order/order.wxss */
@import '../../style/css/icons.wxss';

.background {
  height: 1300rpx;
  background-color:#f1f1f5d7;
}

.add-address-container {
  border-radius: 5px;
  background-color: white;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 10px 10px 10px 0px;
}
.order-info-container {
  border-radius: 5px;
  background-color: white;
  margin-top: 15rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 10px 10px 10px 0px;
  height: 600rpx;
}
.row-space-between {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 23rpx;
  font-weight: 400;
  margin-left: 120rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
}
.row-flex-start {
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 23rpx;
  font-weight: 400;
  margin-left: 50rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
}
.price-num-space-between {
  /* width: 500rpx; */
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 23rpx;
  font-weight: 400;
  margin-left: 5rpx;
  margin-right: 5rpx;
  margin-top: 20rpx;
}
.statistic-container {
  background-color:rgb(245, 245, 245);
  margin-top: 40rpx;
  margin-left: 20rpx;
  padding: 10px 0px 10px 0px;
  height: 100rpx;
}
.column-container {
  background-color:rgb(245, 245, 245);
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  margin-left: 40rpx;
  padding: 5px 0px 10px 0px;
  display: flex;
  flex-direction: column;
}
.num-container {
  border-radius: 20px;
  width: 15%;
  margin-right: 10rpx;
  background-color: rgb(240, 236, 236);
  text-align:center;
}
.common-column-container {
  margin-top: 5rpx;
  margin-bottom: 10rpx;
  margin-left: 40rpx;
  width: 450rpx;
  padding: 5px 0px 5px 0px;
  display: flex;
  flex-direction: column;
}
.statistic-row {
  background-color:rgb(245, 245, 245);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 23rpx;
  font-weight: 400;
}
.do-buy-container {
  font-size: 39rpx;
  position: fixed;
  bottom: 20px;
  display: flex;
  width: 100%;
  justify-content: center;
}
.do-buy-butt {
  font-size: 24rpx; 
  width: 100%;
  background-color: black;
}
/*使屏幕变暗 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
  /*对话框 */
  .commodity_attr_box {
  width: 100%;
  height: 45%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 10rpx;
}

.identify-container {
  border-radius: 2px;
  background-color: rgb(245, 245, 245);
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  padding: 8px 5px 8px 5px;
  display: flex;
  flex-direction: row;
}

.identify-input {
  width: 400rpx;
}