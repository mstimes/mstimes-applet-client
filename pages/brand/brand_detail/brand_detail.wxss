.totop{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color:#fff; 
}

.detail {
  background-color: aqua;
  width: 50%;
  border-radius: 5%;
  margin-top: -200rpx;
  z-index: 2;
  position: absolute;
}

.roll {
  width: 100%;
  height: 1200;
  background-color: brown;
  z-index: 1;
}

.background {
  /* height: 2000rpx; */
  background-color:#f1f1f5d7;
  position: absolute;
}

.detail_background {
  background-color: white;
  margin-left: 20rpx;
  margin-top: -40rpx;
  border-radius: 2%;
  z-index: 2;
  position: relative;
}

.mask-view {
  width: 100%;
  height: 100%;
  position: fixed;
  overflow: hidden;
  background-color: #ffffff;
  z-index: 999;
  top: 0;
  left: 0;
}

.rich-text {
  overflow: hidden;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  /* background-color: rgba(0, 0, 0, .6); */
  z-index: 10;
}
.mask-content {
  position: absolute;
  top: 44%;
  left: 50%;
  height: 80%;
  width: 60%;
  transform: translate(-50%, -50%);
  background-color: yellowgreen;
  z-index: 12;

  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.page-body {
  width: 100%;
  z-index: -1;
}