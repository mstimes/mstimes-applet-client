<view class="c-top-header-white">
  <image style="width: 40rpx; height: 40rpx; position: absolute; left: 20rpx; top: 115rpx" src="/images/arrow-left.png" bindtap="goBack"></image>
    经营概况
</view>

<view style="background-color: rgb(240, 240, 240);">
  <view style="color: rgb(240, 240, 240); height: 2rpx;">1</view>
  <view class="c-empty-container">
    <view style="display: flex; flex-direction: column;">
      <text style="font-size: 30rpx; font-weight: 500; margin-left: 50rpx; margin-bottom: 30rpx;">历史数据</text>
      <view style="display: flex; flex-direction: row; align-content: space-around;">
        <view style="display: flex; flex-direction: column; text-align: center; width: 250rpx;">
          <text style="font-size: 25rpx; font-weight: 400; margin-left: 50rpx; margin-top: 10rpx; color: grey;">成交金额</text>
          <view style="display: flex; flex-direction: row; margin: 0 auto;">
            <text style="font-size: 25rpx; font-weight: 500; margin-left: 50rpx; margin-top: 30rpx; ">¥</text>
            <text style="font-size: 35rpx; font-weight: 500; margin-left: 5rpx; margin-top: 20rpx; ">{{totalSales}}</text>
            <!-- <text style="font-size: 25rpx; font-weight: 500; margin-left: 0rpx; margin-top: 33rpx; ">.00</text> -->
          </view>
        </view>
        <view style="display: flex; flex-direction: column; text-align: center; width: 250rpx;">
          <text style="font-size: 25rpx; font-weight: 400; margin-left: 50rpx; margin-top: 10rpx; color: grey;">收益金额</text>
          <view style="display: flex; flex-direction: row; margin: 0 auto;">
            <text style="font-size: 25rpx; font-weight: 500; margin-left: 50rpx; margin-top: 30rpx; ">¥</text>
            <text style="font-size: 35rpx; font-weight: 500; margin-left: 5rpx; margin-top: 20rpx; ">{{totalIncome}}</text>
            <!-- <text style="font-size: 25rpx; font-weight: 500; margin-left: 0rpx; margin-top: 33rpx; ">.00</text> -->
          </view>
        </view>
        <view style="display: flex; flex-direction: column; text-align: center; width: 250rpx;">
          <text style="font-size: 25rpx; font-weight: 400; margin-left: 50rpx; margin-top: 10rpx; color: grey;">成交订单数</text>
          <text style="font-size: 35rpx; font-weight: 500; margin-left: 50rpx; margin-top: 20rpx;">{{totalOrderSum}}</text>
        </view>
      </view>

      <view style="display: flex; flex-direction: row; align-content: space-between; margin-top: 30rpx;">
        <view style="display: flex; flex-direction: column; text-align: center; width: 250rpx;">
          <text style="font-size: 25rpx; font-weight: 400; margin-left: 50rpx; margin-top: 10rpx; color: grey;">成交人数</text>
            <text style="font-size: 35rpx; font-weight: 500; margin-left: 50rpx; margin-top: 20rpx;">{{dealPersons}}</text>
        </view>
        <view style="display: flex; flex-direction: column; text-align: center; width: 250rpx;">
          <text style="font-size: 25rpx; font-weight: 400; margin-left: 50rpx; margin-top: 10rpx; color: grey;">成交件数</text>
          <!-- <view style="display: flex; flex-direction: row; margin: 0 auto;"> -->
            <text style="font-size: 35rpx; font-weight: 500; margin-left: 50rpx; margin-top: 20rpx; ">{{totaldealAmount}}</text>
            <!-- <text style="font-size: 25rpx; font-weight: 500; margin-left: 0rpx; margin-top: 33rpx; ">.00</text> -->
          <!-- </view> -->
        </view>
        <view style="display: flex; flex-direction: column; text-align: center; width: 250rpx;">
          <text style="font-size: 25rpx; font-weight: 400; margin-left: 50rpx; margin-top: 10rpx; color: grey;">退款金额</text>
          <view style="display: flex; flex-direction: row; margin: 0 auto;">
            <text style="font-size: 25rpx; font-weight: 500; margin-left: 50rpx; margin-top: 30rpx; ">¥</text>
            <text style="font-size: 35rpx; font-weight: 500; margin-left: 5rpx; margin-top: 20rpx; ">{{drawingAmount}}</text>
            <!-- <text style="font-size: 25rpx; font-weight: 500; margin-left: 0rpx; margin-top: 33rpx; ">.00</text> -->
          </view>
        </view>
      </view>
    </view>
  </view>
  <view style="color: rgb(240, 240, 240); height: 8rpx;">1</view>

  <view id="tabs">
    <view wx:for="{{tabs}}" data-idx="{{index}}" class="item {{checked==index?'active':''}}" bindtap="navTip">
        {{item}}
    </view>
  </view>

<view wx:if="{{orderList == 0}}" style="display:flex;flex-direction:column;align-items:center;justify-content: center; background-color: white;">
  <image mode="aspectFill" style="width: 80%; height: 100rpx; margin-top: 200rpx" src="/images/no_data.jpeg"></image>
</view>
 
<view style="background-color:white;" wx:key="index" wx:for-index="i" wx:for="{{orderList}}" >
  <view style="color: white; height: 5rpx;">1</view>
    <view class="order-records-container">
      <view class="row-space-between">
        <text style="font-size:25rpx; font-weight:400; padding: 0px 0px 0px 0px">订单编号 {{item.orderNumber}}</text>
        <text wx:if="{{item.status == 0}}" style="font-size:22rpx; font-weight:400; color:grey">等待付款</text>
        <text wx:if="{{item.status == 1}}" style="font-size:22rpx; font-weight:400; color:grey">买家已付款</text>
        <text wx:if="{{item.status == 2}}" style="font-size:22rpx; font-weight:400; color:grey">支付失败</text>
        <text wx:if="{{item.status == 6}}" style="font-size:22rpx; font-weight:400; color:grey">商家已发货</text>
        <text wx:if="{{item.status == 7}}" style="font-size:22rpx; font-weight:400; color:grey">完成</text>
      </view>
      <view class="row-flex-start">
        <image style="width: 160rpx; height: 160rpx; margin-left: 30rpx; margin-right:10rpx; margin-top:20rpx" src="https://ghomelifevvip.com/{{item.mainImage}}"></image>
        <view class="common-column-container">
          <text style="margin-top: 10rpx;font-size:25rpx;font-weight:400">{{item.title}}</text>
            <text style="margin-top: 10rpx; margin-left:20rpx">分类：{{item.classify}}</text>
            <view class="inner-row-space-between">
              <text style="margin-top: 5rpx; margin-bottom: 5rpx; margin-left:20rpx">规格：{{item.specification}} </text>
              <text style="margin-top: 5rpx; margin-bottom: 5rpx;margin-right:100rpx"> x {{item.orderCount}}</text>
            </view>
             <view style="display: flex; flex-direction: row; justify-content: space-between;">
              <text style="margin-top: 20rpx; margin-bottom: 5rpx; margin-left:10rpx;">实付金额 {{item.realPrice * item.orderCount}} 元</text>
              <text style="margin-top: 20rpx; margin-bottom: 5rpx; margin-left:10rpx;">收益金额 {{item.realPrice * item.orderCount}} 元</text>
             </view>
          </view>
      </view>
      <view class="row-space-between">
        <text>收件人： {{item.person}}</text>
        <text>下单时间： {{item.createTime}}</text>
      </view>
      <view class="row-space-between">
        <text>收件地址：{{item.orderAddress}}</text>
      </view>
    </view>
    <view wx:if="{{i + 1 == totalOrderRecords}}" style="text-align: center;padding: 10px 0px 20px 0px">
      <text style="font-size: 25rpx; font-weight: 400" >没有更多数据 </text>
    </view>
  </view>
</view>