  <view wx:if="{{userType == 0 || (userType == 1 && userLevel != 10)}}" style="text-align: center; background-color: #ECEAEA; padding-bottom: 30rpx; padding-top: 50rpx;">
    <text style="font-size: 32rpx;font-weight:400;font-family:NSimSun;color:black;margin-left: 10rpx;">- 猜你喜欢 -</text>
  </view>
  <view wx:if="{{userType == 0 || (userType == 1 && userLevel != 10)}}" class="recommond-container">
    <view class="recommand-item"  wx:key="index" wx:for-index="i" wx:for="{{goodList}}" >
      <!-- <navigator class="home-sail-but" url="/pages/detail/detail?id={{item.goodId}}&isHistory=false" hover-class="other-navigator-hover"> -->
        <navigator class="home-sail-but" url="/pages/detail/detail?id={{item.goodId}}&fromScenePage=1" hover-class="other-navigator-hover">
        <view class="order_star_view">
          <image src="{{item.mainImage}}" style="border-radius: 5rpx;" mode="widthFix"></image>
        </view>

        <view class="order-sail-des-title">
          <text>{{item.brand}}</text>
        </view>
        <view class="order-sail-des">
          <text>{{item.description}}</text>
        </view>
        <view style="display: flex; flex-direction: row;">
          <view style="display: flex; flex-direction: column; margin-left: 40rpx; margin-top: 20rpx;">
            <view class="order-sail-des-title" style="margin-bottom: 0rpx">
              <text class="order-sail-best-small"> ¥</text>
              <text class="order-sail-best">{{item.groupPriceDotBefore}}</text>
              <text wx:if="{{item.groupPriceDotAfter > 0}}" class="order-sail-best-small">.{{item.groupPriceDotAfter}}</text>
            </view>
            <text class="order-sail-ori" style="margin-bottom: 20rpx; margin-left: 10rpx;">¥{{item.oriPrice}}</text>
