/* pages/hsitory/history.wxss */
@import '../../style/css/icons.wxss';

.history-container{
  /* background-color:#dff3f9; */
  overflow-x:hidden;
  padding: 10px 10px 0px 10px;
}
.title-head{
  font-size: 28rpx;
  text-align: center;
  font-weight: 400;
  padding: 5px 8px 0px 8px;
  font-family: 'STKaiti';
}
.search{
  display: flex;
  height: 100%;
  width:100%;
  /* flex-direction: row; */
  /* flex-wrap:wrap; */
  /* justify-content:space-between; */

}
.search_arr {
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
  margin-left: 20rpx;
  /* width: 100%; */
}
.search-input{
  margin-left: 55rpx;
  height: 60rpx;
}
.search-but{
  margin-left: 15rpx;
  line-height: 60%;
  text-align: center;
  border: 1px solid #d0d0d0;
  border-radius: 10rpx;
}
.searchcion {
  margin: 10rpx 10rpx 10rpx 10rpx;
  position: absolute;
  /* left:25rpx; */
  z-index: 2;
  width: 20px;
  height: 20px;
  text-align: center;
}
.detail-image-border {
  background-color: #090909;
  padding: 20px 25px 5px 25px;
}
.classify{
  padding: 0px 0px 8px 0px;
}
.classify-srcolbox {
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
  margin-top: 22px;
}
.classify-item-line {
  line-height: 80rpx;
  display: inline-block;
  /* background-color: #999; */
  margin-right: 20rpx;
  text-align: center;
}
.classify-item-line:nth-of-type(2n) {
  background-color: #ffffff;
}
.classify-button{
  width: 100%;
  border-radius: 0px;
  /* background: rgb(163, 3, 3); */
  background: #ffffff;
  font-weight: 400;
  /* color: white; */
  font-size: 25rpx;
  border: 1px solid rgb(228, 226, 226);
}
.selected-classify-button{
  width: 100%;
  border-radius: 0px;
  background: rgb(233, 231, 231);
  font-weight: 400;
  font-size: 25rpx;
  border: 1px solid rgb(228, 226, 226);
}
.order-info{
  display:flex;
  flex-wrap:wrap;
  justify-content:space-between;
}
.order-item{
  width: 49%;
  margin-top: 2px;
  /* height: 250rpx; */
  /* background-color:#f7f7f7; */
  border: 1px solid rgb(250, 248, 248);
  position: relative;
}
.order_star_view{
  padding: 0px 8px 0px 0px;
  display: flex;
  flex-direction: row-reverse;
}
.order_star_icon{
  align-items: flex-end;
  position: absolute;
}
.star_view{
  padding: 8px 8px 0px 0px;
  display: flex;
  flex-direction: row-reverse;
}
.order-image-border {
  /* background-color: #1ff5ff; */
  /* padding: 20px 25px 5px 25px;
}
.order-text-container{
  padding: 10px 25px 10px 25px;
  /* background-color: #090909; */
}
.order-sail-des-title{
  text-align: center;
  font-size: 26rpx;
  font-family: STKaiti;
  font-weight: 400;
  padding: 10px;
  /* color:#ffffff */
}
.order-sail-des {
  text-align: center;
  font-size: 20rpx;
  font-family: STKaiti;
  color:#a3a2a2
}
.order-sail-best-small {
  /* margin-top:10px; */
